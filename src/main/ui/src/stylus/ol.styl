@import 'nib'
@import 'mixins'
@import 'vars'

#targetRank, #siteRank
    .olControlPanel
        top 70px
        left 8px
        background rgba(255,255,255,0.4)
        border-radius 4px
        padding 2px
        cursor pointer
        .olButton
            display block
            margin 1px
            padding 0
            color white
            font-family FontAwesome
            text-decoration none
            text-align center
            height 22px
            width 22px
            line-height 22px
            background #130085
            background rgba(0, 60, 136, 0.5)
            &:hover
                background #130085
                background rgba(0, 60, 136, 0.7)
            &:first-child
                border-top-left-radius 4px
                border-top-right-radius 4px
            &:last-child
                border-bottom-left-radius 4px
                border-bottom-right-radius 4px
        div[class*='Active olButton']
            background #130085
            background rgba(0, 60, 136, 0.7)
            box-shadow inset 0 3px 5px rgba(0, 0, 0, .125)
        .olControlNavigationItemActive, .olControlNavigationItemInactive
            &:after
                content '\f047'

.mapSpinner
    position absolute
    left 50%
    top 50%
    z-index 900

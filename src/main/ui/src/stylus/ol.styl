@import 'nib'
@import 'mixins'
@import 'vars'

#olWpsExample
    .olControlAttribution
        bottom 5px
    .olControlEditingToolbar .olControlModifyFeatureItemInactive
        background-image url(../vendor/bower/openlayers/theme/default/img/draw_point_off.png)
    .olControlEditingToolbar .olControlModifyFeatureItemActive
        background-image url(../vendor/bower/openlayers/theme/default/img/draw_point_on.png)
    textarea
        display block
        width 100%
        height 3em
    label
        display block
    .notsupported
        color red

#targetRank, #siteRank
    .olControlZoomPanel
        top 10px
    .olControlNavToolbar
        top 70px

.mapSpinner
    position absolute
    left 50%
    top 50%
    z-index 900

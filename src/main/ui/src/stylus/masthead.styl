.masthead
    z-index 800
    height mastheadHeight
    background linear-gradient(top, lighten(mastheadBg, 10%), mastheadBg)
    border-radius 0
    &.navbar-default
        color mastheadColor
        .navbar-brand
            color mastheadColor
            &:hover
                -webkit-opacity 0
                -moz-opacity 0
                opacity 0
                -webkit-transition all 1s ease
                -moz-transition all 1s ease
                -ms-transition all 1s ease
                -o-transition all 1s ease
                transition all 1s ease
    .activeNavItem
        color red !important

@import 'nib'
@import 'mixins'
@import 'vars'

.masthead
    z-index 800
    height mastheadHeight
    background linear-gradient(top, lighten(mastheadBg, 10%), mastheadBg)
    border-radius 0
    &.navbar-default
        color mastheadColor
        border-color mastheadBg
        .navbar-brand
            color mastheadColor
            &:hover
                opacity 0
                transition all 1s ease
        .navbar-nav>li>a:hover
            color white

    .activeNavItem
        color red !important

@import 'nib'
@import 'mixins'
@import 'vars'

.masthead
    z-index 800
    height mastheadHeight
    background linear-gradient(top, lighten(mastheadBg, 10%), mastheadBg)
    border-radius 0
    &.navbar-default
        shadow-bottom()
        color mastheadColor
        border-color mastheadBg
        .navbar-brand
            color mastheadColor
            &:hover
                opacity 0
                transition all 1s ease
        .navbar-nav
            > li
                > a
                    outline none
                    transition color 0.3s ease
                    &:hover
                        color white

    .activeNavItem
        color red !important

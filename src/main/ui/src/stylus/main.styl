body
    overflow hidden

.anchorTop {
    position: absolute;
    top: 0;
}
.anchorBottom {
    position: absolute;
    bottom: 0;
}
.anchorLeft {
    position: absolute;
    left: 0;
}
.anchorRight {
    position: absolute;
    right: 0;
}

.left-pane
    background white
    position absolute
    top 0
    bottom 0
    width sidePaneWidth
    z-index 500
    left -1 * (sidePaneWidth)
    transition left 0.5s ease
    border-right 1px solid #ccc
    &.visible
        left 0
        .close-btn i
            -webkit-transform scale(1, -1)
            transform scale(1, -1)
    .btn-container
        position absolute
        top 0
        bottom 0
        right 0
        vertical-align middle
    .close-btn
        position absolute
        transform translateY(-50%)
        top 50%
        width closeBtnWidth
        height closeBtnHeight
        border-radius 0 8px 8px 0
        border 1px solid #CCC
        border-left 0
        user-select none
        cursor pointer
        background linear-gradient(left, white, '#F5F5F5')
        i
            display inline-block
            line-height closeBtnHeight
            margin-left 4px
            -webkit-transform scale(-1, 1)
            transform scale(-1, 1)
    ul.nav:first-of-type
        height 42px
        border-bottom 1px solid  #BBB
        background linear-gradient(top, white, #EEE)
        padding-top 10px
    .tab-pane
        position absolute
        top 42px
        right 0
        bottom 0
        left 0
        padding 4px
        .instructions
            margin-top 20px
            span
                padding 0 10px
            button
                vertical-align text-bottom
        .block, section
            overflow-y auto
            margin 0
            border 2px solid #E0E4E6
            border-radius 4px
            header
                z-index 600
                position fixed
                height 40px
                width sidePaneWidth - 30px
                padding 10px
                background white
                border-bottom 1px solid #DEDEDE
                background-image linear-gradient(#D8E2EB, white)
                shadow-bottom()
            > ul, > .block-content > ul
                margin-top 45px
            ul
                padding-left 5px
                overflow-y auto
                &.nest
                    li.checkbox:first-of-type
                        margin-top 0
                li.checkbox
                    margin-bottom 6px
            &.splitter
                border none

.leftPaneOverlay
    background-color #707070
    width sidePaneWidth - 1
    position absolute
    top 0
    bottom 0
    left -1 * (sidePaneWidth)
    transition left 0.5s ease
    &.visible
        left 0

label.header-label
    font-weight bold
    color #555
    &:not(:first-of-type)
        margin-top 10px

.map
    background-color: mapBgColor

center-pane
    position absolute
    top 0
    right 0
    bottom 0
    left sidePaneWidth
    &.full-width
        left 0

.center-top
    position absolute
    left 10px
    right 10px
    height 100px
    z-index 400
    border-radius 0 0 5px 5px
    top -1 * (100px)
    transition top 0.5s ease
    border 1px solid #ccc
    border-top 0
    //background white
    &.visible
        top 0
        .close-btn i
            -webkit-transform scale(-1, 1)
            transform scale(-1, 1)
    .btn-container
        position absolute
        left 0
        bottom 0
        right 0
        text-align center
    .close-btn
        position absolute
        transform translateX(-50%)
        left 50%
        width 70px
        height 20px
        border-radius 0 0 8px 8px
        border 1px solid #CCC
        border-top 0
        user-select none
        cursor pointer
        background linear-gradient(top, white, '#F5F5F5')
        i
            display inline-block
            -webkit-transform scale(1, -1)
            transform scale(1, -1)

.center-right
    position absolute
    top 110px
    bottom 15px
    z-index 400
    width 100px
    border-radius 5px 0 0 5px
    right -1 * (100px)
    transition right 0.5s ease
    border 1px solid #ccc
    border-right 0
    //background white
    &.visible
        right 0
        .close-btn i
            -webkit-transform scale(1, -1)
            transform scale(1, -1)
    .btn-container
        position absolute
        top 0
        bottom 0
        left 0
        vertical-align middle
    .close-btn
        position absolute
        left -20px
        transform translateY(-50%)
        top 50%
        width closeBtnWidth
        height closeBtnHeight
        border-radius 8px 0 0 8px
        border 1px solid #CCC
        border-right 0
        user-select none
        cursor pointer
        background linear-gradient(right, white, '#F5F5F5')
        i
            display inline-block
            line-height closeBtnHeight
            margin-left 4px
            -webkit-transform scale(-1, 1)
            transform scale(-1, 1)

.timepicker-sm
    margin-top -10px
    .btn
        padding 0 12px
        border none

#targetRank, #siteRank
    .timepicker-sm
        .btn
            font-size 10px
        a[ng-click^=decrement]
            vertical-align top
        a[ng-click^=increment]
            vertical-align bottom

.body-targetRank, .body-siteRank
    > ul[datepicker-popup-wrap]
        top auto !important
        bottom 25px !important
        left 255px !important

.outline-text-white
    outline-text-white()

.outline-text-black
    outline-text-black()

.stretch
    height 100%
    width 100%
    overflow auto

.modal-header
    border-top-left-radius 6px
    border-top-right-radius 6px
    border-bottom 1px solid #DEDEDE
    background-image linear-gradient(#D8E2EB, white)
    shadow-bottom()

.semi-transparent
    opacity 0.5

.modal-footer
    margin-top 0

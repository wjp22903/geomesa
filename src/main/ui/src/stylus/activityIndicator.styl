#timeseriesContainer
    margin 30px 10px
    padding 0 4px 4px 4px
    position absolute
    left 0
    right 0
    bottom -400px
    border 2px solid #CCCCCC
    border-radius 4px
    background-color white
    opacity 0.7
    transition height 1s ease
    &.showTimeseriesContainer
        bottom 0
        transition bottom 0.3s ease
    &:hover
        opacity 1
        transition opacity 1s ease
    h4
        width 100%
        text-align center
    #timeseries
        height 300px

.newAlert
    box-shadow inset 0 0 5px #FF0000

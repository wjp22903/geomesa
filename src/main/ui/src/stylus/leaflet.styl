.leaflet-map
    position absolute
    top 0px
    left 0px
    right 0px
    bottom 0px
    background-color mapBgColor

.leaflet-container
   font  16px/1.5 "Helvetica Neue", Arial, Helvetica, sans-serif

.info
    padding 20px
    font 16px/1.5 "Helvetica Neue", Arial, Helvetica, sans-serif
    background #999999
    box-shadow 0 1px 15px rgba(0,0,0,0.0)
    border-radius 5px

.legend
    line-height 18px
    color #000000

.legend i
    width 20px
    height 20px
    float left
    margin-right 8px
    opacity 1.0
    padding 0px

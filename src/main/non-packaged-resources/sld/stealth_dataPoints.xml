<?xml version="1.0" encoding="ISO-8859-1"?>
<StyledLayerDescriptor version="1.0.0"
                       xsi:schemaLocation="http://www.opengis.net/sld StyledLayerDescriptor.xsd"
                       xmlns="http://www.opengis.net/sld"
                       xmlns:ogc="http://www.opengis.net/ogc"
                       xmlns:xlink="http://www.w3.org/1999/xlink"
                       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <NamedLayer>
        <Name>Data Points</Name>
        <UserStyle>
            <FeatureTypeStyle>
                <Rule>
                    <PointSymbolizer>
                        <Graphic>
                            <Mark>
                                <WellKnownName>
                                    <ogc:Function name="env">
                                        <ogc:Literal>shape</ogc:Literal>
                                        <ogc:Literal>circle</ogc:Literal>
                                    </ogc:Function>
                                </WellKnownName>
                                <Fill>
                                    <CssParameter name="fill">#
                                        <ogc:Function name="env">
                                            <ogc:Literal>color</ogc:Literal>
                                            <ogc:Literal>FF0000</ogc:Literal>
                                        </ogc:Function>
                                    </CssParameter>
                                    <CssParameter name="fill-opacity">
                                        <ogc:Function name="env">
                                            <ogc:Literal>opacity</ogc:Literal>
                                            <ogc:Literal>1</ogc:Literal>
                                        </ogc:Function>
                                    </CssParameter>
                                </Fill>
                                <Stroke>
                                    <CssParameter name="stroke">#
                                        <ogc:Function name="env">
                                            <ogc:Literal>strokeColor</ogc:Literal>
                                            <ogc:Literal>000000</ogc:Literal>
                                        </ogc:Function>
                                    </CssParameter>
                                    <CssParameter name="stroke-opacity">
                                        <ogc:Function name="env">
                                            <ogc:Literal>strokeOpacity</ogc:Literal>
                                            <ogc:Literal>1</ogc:Literal>
                                        </ogc:Function>
                                    </CssParameter>
                                    <CssParameter name="stroke-width">
                                        <ogc:Function name="env">
                                            <ogc:Literal>strokeWidth</ogc:Literal>
                                            <ogc:Literal>0</ogc:Literal>
                                        </ogc:Function>
                                    </CssParameter>
                                </Stroke>
                            </Mark>
                            <Size>
                                <ogc:Function name="env">
                                    <ogc:Literal>size</ogc:Literal>
                                    <ogc:Literal>9</ogc:Literal>
                                </ogc:Function>
                            </Size>
                        </Graphic>
                    </PointSymbolizer>
                </Rule>
            </FeatureTypeStyle>
        </UserStyle>
    </NamedLayer>
</StyledLayerDescriptor>

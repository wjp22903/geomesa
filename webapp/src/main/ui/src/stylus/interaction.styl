.mapPopupSpinner
    position relative
    top -13px
    left -13px
    outlineTextWhite()

.mapPopupContainer
    border-radius 3px
    overflow hidden
    min-width 200px
    .mapPopupHeader
        border 2px solid #bbb
        border-bottom none
        background-color #ddd
        border-top-left-radius 3px
        border-top-right-radius 3px

.mapPopupTabStrip
    display inline-block
    position absolute
    top 22px
    bottom 0
    left -26px
    >div.btn-default
        margin 1px 0
        border-top-left-radius 4px
        border-bottom-left-radius 4px
        cursor pointer
        background-color #bbb
        border 2px solid #bbb
        color #666
        &.mapPopupActiveTab
            color #333
            background-color white
            border-right 2px solid white

.mapPopupTabContentContainer
    display inline-block
    background white
    border-bottom-left-radius 3px
    border-bottom-right-radius 3px
    border 2px solid #bbb
    border-top none

.searchResultTableHeader
    overflow-x hidden
    width 100%
    min-width 200px
    white-space nowrap

.searchResultTableResize
    min-width 200px

.searchResultTableHeaderResult
    display inline-block
    white-space normal
    border 1px solid white

.searchResultTableHeaderCaption
    width 100%
    text-align center

.searchResultTableHeaderRow
    display inline-block
    border-top 1px solid #ddd
    white-space nowrap
    width 100%

.searchResultTablePager
    .btn
        padding 0
        line-height 1.2

.searchResultTableBody
    height 100%
    width 100%
    overflow scroll
    white-space nowrap

.searchResultTableBodyResult
    display inline-block
    vertical-align top
    border 1px solid white
    overflow hidden

.searchResultTableRowKey
    text-align right
    vertical-align top
    padding 0 5px
    font-weight bold
    display inline-block
    white-space normal
    word-wrap break-word

.searchResultTableRowCell
    padding 0 5px
    display inline-block
    white-space normal
    word-wrap break-word
    vertical-align top

.searchResultTableRowAlt
    background-color #f1f1f1

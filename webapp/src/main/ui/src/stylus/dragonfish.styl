.df-margin-specs
    margin-top 5px
    margin-bottom 5px

.df-inline-v-middle
    display inline
    vertical-align middle

.df-class-sidebar
    background white
    .df-class-result
        border 1px dashed black
        @extends .df-margin-specs

.df-wizard-text-input
    @extends .df-margin-specs
    width 300px
    text-align left
    vertical-align middle

.df-wizard-table-common
    border-collapse separate
    border-spacing 2px

.df-wizard-table
    @extends .df-wizard-table-common
    width 500px

.df-wizard-bounds-table
    @extends .df-margin-specs
    @extends .df-wizard-table-common
    text-align center

.df-wizard-selector
    @extends .df-inline-v-middle

.df-wizard-draw-message
    @extends .df-margin-specs

.df-wizard-bounds-title
    @extends .df-inline-v-middle
    text-align left

.df-wizard-bounds-buttons
    @extends .df-margin-specs
    @extends .df-inline-v-middle
    text-align center

.df-wizard-bounds-box
    max-width 90px

.df-input-hidden
    display none
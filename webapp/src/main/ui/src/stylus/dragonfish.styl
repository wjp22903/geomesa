input[type=checkbox]
    display none

input[type=checkbox]+ label:before
    font-family FontAwesome
    content "\f096"
    letter-spacing 8px
    font-size 14px

input[type=checkbox]:checked + label:before
    content "\f046"
    letter-spacing 6px
    font-size 14px


.layerStyleGrouping
    background-color white
    margin 2px
    padding 2px
    border-radius 4px
    border 1px dotted #ccc
    &:hover
        border-color #444

.layerStyleRow
    padding 0
    margin 0
    vertical-align middle
    .cell
        display table-cell
        padding-right 4px
        white-space no-wrap
        input[type=number]
            padding-left 5px
            padding-top 0px
            padding-bottom 0px
            margin 0px
            outline none
            width 50px
            border 1px solid #ccc
            border-radius 4px
            &:hover
                border 1px dotted #444

.layerStyleSlider
    width: 70%
    display inline-block

.dragHandle
    float right
    width 20px
    cursor ns-resize
    text-align center
    border 1px solid #ccc
    border-radius 4px
    line-height 18px
    max-height 20px
    &:hover
        background-color black
        color white

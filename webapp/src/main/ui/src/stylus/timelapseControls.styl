.timeLapseControlsPanel
    z-index 501
    bottom 25px
    right 5px
    width 70%
    padding 5px
    border-radius 3px
    color black
    outlineTextWhite()
    .center
        text-align center
    .rightJustify
        text-align right
    .cell
        display table-cell
        padding 0px
        height 100%
        white-space nowrap
    #col0
        padding-right 2px
    #col1
        padding-right 3px
    #col2
        width 100%
    #col3
        padding-left 3px
    .cellTable
        display table
        width 100%
        padding 0px
    .cellTableRow
        display table-row
        width 100%
        padding 0px
        height 22px
    .innerField
        display table-cell
        width 100%
        padding 0px
        button
            border none
            border-radius 3px
            background-color rgba(0,0,0,0)
            outline none
            outlineTextWhite()
            padding 1px 6px
        input[type=number]
            padding-left 5px
            padding-top 0px
            padding-bottom 0px
            margin-top 1px
            margin-bottom 1px
            outline none
            width 60%
            border none
            border-radius 3px
            color black
            outlineTextWhite()
        select
            border none
            border-radius 3px
            background-color #aeb5cc
            outline none
            color black
            outlineTextWhite()
        .displayShadow
            padding 1px 5px
            border-radius 3px

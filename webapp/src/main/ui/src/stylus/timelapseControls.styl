.timeLapseControlsPanel
    z-index 501
    bottom 25px
    right 5px
    width 70%
    padding 5px
    border-radius 3px
    color black
    .center
        text-align center
    .rightJustify
        text-align right
    .cell
        display table-cell
        padding 0px
        height 100%
        white-space nowrap
    #col0
        padding-right 2px
    #col1
        padding-right 3px
    #col2
        width 100%
    #col3
        padding-left 3px
    .cellTable
        display table
        width 100%
        padding 0px
    .cellTableRow
        display table-row
        width 100%
        padding 0px
        height 22px
    .innerField
        display table-cell
        width 100%
        padding 0px
        div
            padding 0px 4px
        .ui-spinner
            width 70px
        input[type=number]
            padding 0
            margin 0
            outline none
            border none
            border-radius 4px
        select
            border none
            border-radius 3px
            background-color #aeb5cc
            outline none
            color black
    .displayShadow
        background white
        padding 0px 4px
        border-radius 4px

.activityAlert
    margin 2px 4px
    padding 2px 4px
    background-color #FFF
    border 2px solid #CCC
    border-radius 4px
    &:hover
        activeGlow()

#timeseriesContainer
    z-index 490 // just below the sidebar (500, see sidebar.styl)
    margin 0
    padding 0 4px 4px 4px
    position absolute
    width 70%
    bottom 25px
    right 4px
    border 2px solid #CCCCCC
    border-radius 4px
    background-color white
    opacity 0.7
    transition height 1s ease
    &.showTimeseriesContainer
        bottom 0
        transition bottom 0.3s ease
    &:hover
        opacity 1
        transition opacity 1s ease
    h4
        width 100%
        text-align center
    #timeseries
        height 300px

.actwiz-table
    border-collapse separate
    border-spacing 2px

.actwiz-datefield
    width 120px

.filterDescription
    color #888
    font-style italic
    font-size 0.9em
    margin-left 10px

.alertSigmas
    margin-left 20px

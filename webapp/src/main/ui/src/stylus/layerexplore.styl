div.categoryGrouping
    padding 1px
    white-space nowrap
    margin 1px
    border-radius 3px
    border 1px dotted #ccc
    &:hover
        border-color #444
    select
        border 1px dotted #ccc
        border-radius 3px
        outline none
        padding 0
        background-color white
        &:hover
            border-color #444

div.categoryIndent
    padding-left 20px

div.categoryCell
    display table-cell
    padding-right 4px
    height 100%
    white-space nowrap
    vertical-align middle
    .toggleButton
        line-height 5px
        width 20px
        height 19px
        margin-bottom 3px
        vertical-align text-top
        &:hover
            border 1px dotted #444
    .toggleSlide
        width 35px
        &:hover
            border 1px dotted #444
    .rainbow
        background linear-gradient(to right, red, orange 16%, yellow 32%, green 48%, blue 60%, indigo 76%, violet)
        border 1px solid white
        &:hover
            border 1px dotted #444


div.legendIconContainer
    height 16px
    width 16px
    overflow hidden
    display inline-block

span.catGroupButton
    padding 0
    line-height 1
    &:first-of-type
        margin-left 8px

.errorIconWrapper
    width 16px
    height 16px
    display inline-block
    .tooltip.right .tooltip-arrow
        border-right-color #a94442
    .tooltip-inner
        background-color #a94442

.splashPage
    anchorAll()
    z-index 2000000
    background-color white
    iframe
        border none
        height 100%
        width 100%
    .splashDismissButton
        position absolute
        top 2px
        right 2px
        background-color rgba(0, 0, 0, 0.7)
        color white
        border 2px solid white
        border-radius 100%
        cursor pointer
        width 1em
        opacity 0
        outlineTextBlack()
        pulse()

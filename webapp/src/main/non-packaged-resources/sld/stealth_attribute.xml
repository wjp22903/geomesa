<?xml version="1.0" encoding="ISO-8859-1"?>
<StyledLayerDescriptor version="1.0.0"
                       xsi:schemaLocation="http://www.opengis.net/sld StyledLayerDescriptor.xsd"
                       xmlns="http://www.opengis.net/sld"
                       xmlns:ogc="http://www.opengis.net/ogc"
                       xmlns:xlink="http://www.w3.org/1999/xlink"
                       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <NamedLayer>
        <Name>stealth_attribute</Name>
        <UserStyle>
            <Title>Attribute</Title>
            <Abstract>Attribute Hash</Abstract>
            <FeatureTypeStyle>
                <Transformation>
                    <ogc:Function name="geomesa:HashAttributeColor">
                        <ogc:Function name="parameter">
                            <ogc:Literal>data</ogc:Literal>
                        </ogc:Function>
                        <ogc:Function name="parameter">
                            <ogc:Literal>attribute</ogc:Literal>
                            <ogc:Function name="env">
                              <ogc:Literal>hashAttr</ogc:Literal>
                            </ogc:Function>
                        </ogc:Function>
                        <ogc:Function name="parameter">
                            <ogc:Literal>modulo</ogc:Literal>
                            <ogc:Literal>7</ogc:Literal>
                        </ogc:Function>
                    </ogc:Function>
                </Transformation>
                <Rule>
                    <Name>rule1</Name>
                    <Title>Blue Line</Title>
                    <Abstract>A solid blue line with a 1 pixel width</Abstract>
                    <PointSymbolizer>
                        <Graphic>
                            <Mark>
                                <WellKnownName>
                                     <ogc:Function name="env">
                                        <ogc:Literal>shape</ogc:Literal>
                                        <ogc:Literal>circle</ogc:Literal>
                                    </ogc:Function>

                                </WellKnownName>
                                <Fill>
                                    <CssParameter name="fill">
                                      <ogc:PropertyName>hash</ogc:PropertyName>
                                    </CssParameter>
                                </Fill>
                            </Mark>
                                                        <Size>
                                <ogc:Function name="env">
                                    <ogc:Literal>size</ogc:Literal>
                                    <ogc:Literal>9</ogc:Literal>
                                </ogc:Function>
                            </Size>

                        </Graphic>
                    </PointSymbolizer>
                </Rule>
            </FeatureTypeStyle>
        </UserStyle>
    </NamedLayer>
</StyledLayerDescriptor>
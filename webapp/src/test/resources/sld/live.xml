<?xml version="1.0" encoding="ISO-8859-1"?>
<StyledLayerDescriptor version="1.0.0"
                       xsi:schemaLocation="http://www.opengis.net/sld StyledLayerDescriptor.xsd"
                       xmlns="http://www.opengis.net/sld"
                       xmlns:ogc="http://www.opengis.net/ogc"
                       xmlns:xlink="http://www.w3.org/1999/xlink"
                       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <NamedLayer>
        <Name>live</Name>
        <UserStyle>
            <FeatureTypeStyle>
                <Rule>
                    <LineSymbolizer>
                        <Geometry>
                            <ogc:Function name="getGeometryN">
                                <ogc:PropertyName>Location</ogc:PropertyName>
                                <ogc:Literal>0</ogc:Literal>
                            </ogc:Function>
                        </Geometry>
                        <Stroke>
                            <CssParameter name="stroke">#0000FF</CssParameter>
                            <CssParameter name="stroke-dasharray">5 3</CssParameter>
                        </Stroke>
                    </LineSymbolizer>
                </Rule>
                <Rule>
                    <LineSymbolizer>
                        <Geometry>
                            <ogc:Function name="getGeometryN">
                                <ogc:PropertyName>Location</ogc:PropertyName>
                                <ogc:Literal>1</ogc:Literal>
                            </ogc:Function>
                        </Geometry>
                        <Stroke>
                            <CssParameter name="stroke">#0000FF</CssParameter>
                        </Stroke>
                    </LineSymbolizer>
                </Rule>
                <Rule>
                    <TextSymbolizer>
                        <Geometry>
                            <ogc:Function name="startPoint">
                                <ogc:Function name="getGeometryN">
                                    <ogc:PropertyName>Location</ogc:PropertyName>
                                    <ogc:Literal>0</ogc:Literal>
                                </ogc:Function>
                            </ogc:Function>
                        </Geometry>
                        <Label>
                            <ogc:PropertyName>label</ogc:PropertyName><![CDATA[
                         ]]><ogc:PropertyName>subLabel</ogc:PropertyName><![CDATA[
                         ]]><ogc:PropertyName>altFt</ogc:PropertyName>
                        </Label>
                        <Font>
                            <CssParameter name="font-family">SansSerif.plain</CssParameter>
                            <CssParameter name="font-size">12</CssParameter>
                        </Font>
                        <LabelPlacement>
                            <PointPlacement>
                                <AnchorPoint>
                                    <AnchorPointX>
                                        <ogc:Literal>0</ogc:Literal>
                                    </AnchorPointX>
                                    <AnchorPointY>
                                        <ogc:Literal>1</ogc:Literal>
                                    </AnchorPointY>
                                </AnchorPoint>
                                <Displacement>
                                    <DisplacementX>
                                        <ogc:Literal>12.0</ogc:Literal>
                                    </DisplacementX>
                                    <DisplacementY>
                                        <ogc:Literal>-5.0</ogc:Literal>
                                    </DisplacementY>
                                </Displacement>
                            </PointPlacement>
                        </LabelPlacement>
                        <Halo>
                            <Radius>5</Radius>
                            <Fill>
                                <CssParameter name="fill">#000000</CssParameter>
                            </Fill>
                        </Halo>
                        <Fill>
                            <CssParameter name="fill">#FFFFFF</CssParameter>
                        </Fill>
                        <!--Graphic>
                            <Mark>
                                <WellKnownName>square</WellKnownName>
                                <Fill>
                                    <CssParameter name="fill">#000000</CssParameter>
                                </Fill>
                            </Mark>
                         </Graphic-->
                        <VendorOption name="graphic-resize">stretch</VendorOption>
                        <VendorOption name="graphic-margin">2</VendorOption>
                        <VendorOption name="conflict-resolution">false</VendorOption>
                    </TextSymbolizer>
                    <PointSymbolizer>
                        <Geometry>
                            <ogc:Function name="startPoint">
                                <ogc:Function name="getGeometryN">
                                    <ogc:PropertyName>Location</ogc:PropertyName>
                                    <ogc:Literal>0</ogc:Literal>
                                </ogc:Function>
                            </ogc:Function>
                        </Geometry>
                        <Graphic>
                            <Mark>
                                <WellKnownName>ttf://SansSerif.bold#0x2191</WellKnownName>
                                <Fill>
                                    <CssParameter name="fill">#0000FF</CssParameter>
                                    <CssParameter name="fill-opacity">1</CssParameter>
                                </Fill>
                                <Stroke>
                                    <CssParameter name="stroke">#0000FF</CssParameter>
                                    <CssParameter name="stroke-width">0.5</CssParameter>
                                </Stroke>
                            </Mark>
                            <Size>20</Size>
                        </Graphic>
                    </PointSymbolizer>
                </Rule>
            </FeatureTypeStyle>
        </UserStyle>
    </NamedLayer>
</StyledLayerDescriptor>
